{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "include": ["src/**/*"],
    "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
    "compilerOptions": {
        "lib": ["es2015", "DOM"],
        "types": ["svelte"],
        "outDir": "public",
        "declaration": false,
        "paths": {
            "@src": ["./src/"],
            "@interfaces": ["./src/interfaces.ts"]
        }
    }
}
